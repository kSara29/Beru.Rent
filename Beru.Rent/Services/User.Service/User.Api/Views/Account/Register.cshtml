@model User.Api.Models.RegisterViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-6">
        <form method="post" enctype="multipart/form-data" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            
            <div class="row mb-3">
                <label asp-for="FirstName" for="name" class="col-sm-2 col-form-label">Имя</label>
                <div class="col">
                    <input asp-for="FirstName" type="text" class="form-control" id="name">
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label asp-for="LastName" for="lastName" class="col-sm-2 col-form-label">Фамилию</label>
                <div class="col">
                    <input asp-for="LastName" type="text" class="form-control" id="lastName">
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label asp-for="UserName" for="login" class="col-sm-2 col-form-label">Никнейм</label>
                <div class="col">
                    <input asp-for="UserName" type="text" class="form-control" id="login">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-3">
                <label asp-for="Iin" for="iin" class="col-sm-2 col-form-label">ИИН</label>
                <div class="col">
                    <input asp-for="Iin" type="text" class="form-control" id="iin">
                    <span asp-validation-for="Iin" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Email" for="inputEmail3" class="col-sm-2 col-form-label">Электронная почта</label>
                <div class="col-sm-10">
                    <input asp-for="Email" type="text" class="form-control" id="inputEmail3">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Phone" for="phone" class="col-sm-2 col-form-label" type="typeNumber">Номер телефона</label>
                <div class="col">
                    <input asp-for="Phone"
                           placeholder="7011234567"
                           type="tel" class="form-control" id="phone" pattern="[0-9]{10}"/>
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="Password" for="inputPassword3" class="col-sm-2 col-form-label"> Придумайте пароль </label><br/>
                <div class="col-sm-10">
                    <input asp-for="Password" type="password" class="form-control" id="inputPassword3"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="ConfirmPassword" for="inputPassword3" class="col-sm-2 col-form-label"> Подтвердите пароль</label><br/>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" type="password" class="form-control" id="inputPassword3"/>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            
            <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
        </form>
    </div>
</div>


@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
